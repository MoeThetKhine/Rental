@{
    ViewData["Title"] = "Home Page";
    var successMsg = TempData["successMessage"];
    var failMsg = TempData["fail"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if(successMsg is not null)
            {
                <div class="alert alert-success" role="alert">
                    @successMsg
                </div>
            }
            @if(failMsg is not null)
            {
                <div class="alert alert-danger" role="alert">
                    @failMsg
                </div>
            }
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Login Page</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/Home/Signin">
                        <label>Email:</label>
                        <input type="text" name="Email" class="form-control" />
                        <br />
                        <label>Password:</label>
                        <input type="password" name="Password" class="form-control" />
                        <br />
                        <button type ="submit" class="btn btn-outline-dark float-end">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
