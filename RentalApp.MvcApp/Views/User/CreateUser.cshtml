@{
    ViewData["Title"] = "Create User";
}
<h1>Create New User</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-mt-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Create New User</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="/User/Create">
                        <label>User Name:</label>
                        <input class="form-control" type="text" name="UserName" required /><br />
                        <label>Address:</label>
                        <input class="form-control" type="text" name="Address" required /><br />
                        <label>Phone Number:</label>
                        <input class="form-control" type="tel" name="PhoneNumber" required /><br />
                        <button class="btn btn-outline-info" type="submit">Save</button>
                        <a href="/User/UserManagement" class="btn btn-primary" type="submit">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
